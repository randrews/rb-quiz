.question-text=@question.question

%ul.answers
  -@question.answers.each do |answer|
    %li
      -link_to answer_quiz_url(@quiz.short_name, @question.id, answer.id) do
        .answer{:class=>cycle('odd','even')}=answer.answer

-link_to restart_quiz_url(@quiz.short_name) do
  .bottom
    .quiz-restart-link.button-link
      Restart

=render :partial=>"progress"