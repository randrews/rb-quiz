-container ||= "result-#{result.id}"

.record-container.centered{:id=>"result-#{result.id}"}
  -remote_form_for "result", result, :success=>"$('#{container}').replace(request.responseText);", :after=>"$('#{container}').highlight();" do |f|
    =f.label "name"
    =f.text_field "name"

    =f.label "description"
    =f.text_area "description", :rows=>5

    =f.hidden_field "id"

    .action-buttons
      =f.submit "Save"
      =link_to_remote "Cancel", :url=>show_result_path(result.id), :success=>"$('#{container}').replace(request.responseText);", :after=>"$('#{container}').highlight();"
